<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Html.Partial("_NavBar"); @*Here we are rendering the partial view _NavBar*@
    <div class="container body-content">
        @RenderBody()  @{// what we put in our views will be placed here when the view
// is rendered

        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vidly</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)@{ //RenderSection allows us to add a script section in
    //our views. Look at end of CustomerForm for an example of script.

    }
    }
</body>

</html>
